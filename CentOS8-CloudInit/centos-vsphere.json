{
  "builders": [
    {
      "CPUs": "{{user `vm-cpu-num`}}",
      "RAM": "{{user `vm-mem-size`}}",
      "RAM_reserve_all": false,
      "boot_command": [
        "<esc><wait>",
        "linux ks=https://raw.githubusercontent.com/hutger/packer/master/CentOS8-CloudInit/ks-custom.cfg<enter>"
      ],
      "boot_order": "disk,cdrom,floppy",
      "boot_wait": "10s",
      "cluster": "{{user `vsphere-cluster`}}",
      "convert_to_template": true,
      "datacenter": "{{user `vsphere-datacenter`}}",
      "datastore": "{{user `vsphere-datastore`}}",
      "disk_controller_type": "pvscsi",
      "floppy_files": [
        "ks-custom.cfg"
      ],
      "guest_os_type": "centos8_64Guest",
      "insecure_connection": "true",
      "iso_paths": [
        "{{user `iso_url`}}"
      ],
      "network_adapters": [
        {
          "network": "{{user `vsphere-network`}}",
          "network_card": "vmxnet3"
        }
      ],
      "notes": "Build via Packer",
      "password": "{{user `vsphere-password`}}",
      "ssh_password": "{{user `ssh-password`}}",
      "ssh_username": "root",
      "storage": [
        {
          "disk_size": "{{user `vm-disk-size-1`}}",
          "disk_thin_provisioned": true
        },
        {
          "disk_size": "{{user `vm-disk-size-2`}}",
          "disk_thin_provisioned": true
        }
      ],
      "type": "vsphere-iso",
      "username": "{{user `vsphere-user`}}",
      "vcenter_server": "{{user `vsphere-server`}}",
      "vm_name": "{{user `vm-name`}}"
    }
  ],
  "provisioners": [
      {
          "type": "shell",
          "inline": ["sudo sed -i 's/requiretty/!requiretty/' /etc/sudoers"]
        },
      {
          "type" : "shell",
          "script" : "./bootstrap.sh"
      },
      {
        "type": "ansible",
        "extra_arguments": [
          "-e",
          "ansible_python_interpreter=/usr/bin/python3"
        ],
        "playbook_file": "./ami-centos8-ansible.yml",
        "user": "root"
      }
  ]
}

